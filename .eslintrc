{
  "rules": {
    "no-loops/no-loops": 2,
    "no-console": 2,
    "linebreak-style": 0,
    "indent": ["error", 4],
    "global-require": ["off"],
    "no-underscore-dangle": 0,
    "no-inline-comments": ["error"],
    "max-len": ["error", { "code": 160 }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "func-names": ["error", "never"]
  },
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "plugins": ["eslint-plugin-require", "eslint-plugin-one-variable-per-var", "no-loops"],
  "extends": "airbnb-base"
}